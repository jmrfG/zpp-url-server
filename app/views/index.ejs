<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL-Shortener</title>
</head>

<body>
    <div class="container my-4">
        <h1 class="display-3 text-center border-bottom">URL-Shortener</h1>
        <form action="/shorten" method="post" class="my-5">
            <div class="form-group">
                <label for="url">URL</label>
                <input type="url" class="form-control" id="url" aria-describedby="url">
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th scope="col">Original URL</th>
                    <th scope="col">Shortened URL</th>
                    <th scope="col">Is Valid?</th>
                </tr>
            </thead>
            <tbody>
                <% urls.forEach(url => { %>
                  <tr>
                    <td><a href="<%= url.originalUrl %>"><%= url.originalUrl %></a></td>
                    <td><a href="<%= url.shortUrl %>"><%= url.shortUrl %></a></td>
                    <td><%= url.isValid %></td>
                  </tr>
                <% }) %>
              </tbody>
        </table>
        <br>
        <small>
            Shortened links will become invalid after 24 hours of its creation.
        </small>
    </div>
    </div>


</body>

</html>